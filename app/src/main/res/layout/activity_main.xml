<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_light"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.807" app:layout_constraintVertical_bias="0.083"/>
    <Button
            android:text="heater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heater" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cooler"
            app:layout_constraintTop_toTopOf="@+id/cooler" app:layout_constraintBottom_toBottomOf="@+id/cooler"
            app:layout_constraintVertical_bias="1.0" android:layout_marginEnd="8dp"/>
    <Button
            android:text="cooler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cooler" app:layout_constraintEnd_toStartOf="@+id/heater"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.695"/>
    <Button
            android:text="OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/off" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.842" app:layout_constraintEnd_toStartOf="@+id/on"
    />
    <Button
            android:text="on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/on" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/off" app:layout_constraintBottom_toBottomOf="@+id/off"
            app:layout_constraintStart_toEndOf="@+id/off" android:textColorLink="#00C71E1E"
            android:textColorHint="#00CC1212" android:shadowColor="#00EB4E4E"/>
    <Button
            android:text="up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/up" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.325"/>
    <Button
            android:text="down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/down" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.533"/>
    <TextView
            android:text="27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.429"
            android:textSize="24sp" android:textColorLink="#8B1F1F" android:textColor="#3147B9"/>
</androidx.constraintlayout.widget.ConstraintLayout>